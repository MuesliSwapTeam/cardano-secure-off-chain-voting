{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2020", // "es6" would be the safe case regarding compatibility, but we really profit from this performancewise
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "checkJs": false,
    "paths": {
      "assets/*": ["./assets/*"],
      "components/*": ["./components/*"],
      "context/*": ["./context/*"],
      "views/*": ["./views/*"],
      "utils/*": ["./utils/*"],
      "hooks/*": ["./hooks/*"]
    }
  },
  "linterOptions": {
    "exclude": ["src/cardano/**/*.js"]
  },
  "exclude": ["node_modules", "cypress"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js"]
}
